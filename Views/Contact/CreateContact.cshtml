@model AcunMedyaHospitalProject.Entities.Contact
@{
    ViewBag.Title = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Ekleme Formu</h4>
            <p class="card-description">Hastaneye yeni İletişim girişini bu formdan yapabilirsiniz.</p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Adress)</span>
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Phone)</span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
                </div>
                <div class="form-group">
                    <label>Enlem</label>
                    @Html.TextBoxFor(x => x.Longitude, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Longitude)</span>
                </div>
                <div class="form-group">
                    <label>Boylam</label>
                    @Html.TextBoxFor(x => x.Latitude, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Latitude)</span>
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Kaydet </button>
            </form>
        </div>
    </div>
</div>

