@model List<AcunMedyaHospitalProject.Entities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">İletişim Tablosu</h4>
            <p class="card-description text-muted">
                İletişim bilgileri bu alanda gözükecektir.
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th>ID</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>Enlem</th>
                            <th>Boylam</th>
                            <th>Güncelle</th>
                            <th>Kaldır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Adress</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.Longitude</td>
                                <td>@item.Latitude</td>
                                <td><a class="btn btn-success btn-sm" href="/Contact/UpdateContact/@item.Id">Güncelle</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Contact/DeleteContact/@item.Id">Kaldır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/Contact/CreateContact">Slider Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

