@model IList<AcunMedyaHospitalProject.Entities.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">Bölüm Tablosu</h4>
            <p class="card-description text-muted">
                Bölüm bilgileri bu alanda gözükecektir.
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th>ID</th>
                            <th>İsim</th>
                            <th>Açıklama</th>
                            <th>Resim</th>
                            <th>Bölümün Doktorları</th>
                            <th>Güncelle</th>
                            <th>Kaldır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImgUrl" class="img-fluid img-thumbnail department-img" alt="Department Image" /></td>
                                <td><a class="btn btn-primary btn-sm" href="/Doctor/DoctorByDepartment/@item.ID">Doktorlar</a></td>
                                <td><a class="btn btn-info btn-sm" href="/Department/UpdateDepartment/@item.ID">Güncelle</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Department/DeleteDepartment/@item.ID">Kaldır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/Department/CreateDepartment">Bölüm Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-title {
        font-weight: bold;
    }

    .table {
        border-radius: 5px;
        overflow: hidden;
    }

    .btn {
        border-radius: 20px;
    }

    .img-thumbnail {
        max-width: 300px; /* Daha büyük resim boyutu */
        max-height: 300px; /* Daha büyük resim boyutu */
        border-radius: 10px;
    }

    .department-img {
        max-width: 300px; /* Resimlerin genişliğini belirleyin */
        max-height: 300px; /* Resimlerin yüksekliğini belirleyin */
    }

    .thead-dark {
        background-color: #007bff !important; /* Siyah yerine mavi renk */
        color: white !important; /* Yazı rengini beyaz yap */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Hover için gri ton */
    }
</style>
