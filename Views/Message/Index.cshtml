@model List<AcunMedyaHospitalProject.Entities.Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">Mesaj Tablosu</h4>
            <p class="card-description text-muted">
                Mesaj bilgileri bu alanda gözükecektir.
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th>ID</th>
                            <th>İçerik</th>
                            <th>İsim</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Güncelle</th>
                            <th>Kaldır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Content</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td><a class="btn btn-success btn-sm" href="/Message/UpdateMessage/@item.Id">Güncelle</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Message/DeleteMessage/@item.Id">Kaldır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/Message/CreateMessage">Mesaj Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

