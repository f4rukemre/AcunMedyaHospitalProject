@model AcunMedyaHospitalProject.Entities.Message
@{
    ViewBag.Title = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <label>İçerik</label>
        @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
        <br />
        <label>İsim</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        <br />
        <label>Subject</label>
        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </form>
</div>


