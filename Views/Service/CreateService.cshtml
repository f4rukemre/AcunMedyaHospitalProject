@model AcunMedyaHospitalProject.Entities.Service
@{
    ViewBag.Title = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Servis Ekleme Formu</h4>
            <p class="card-description">Hastaneye yeni Servis girişini bu formdan yapabilirsiniz.</p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label>Servis Adı</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Description)</span>
                </div>
                <div class="form-group">
                    <label>İkon Adı</label>
                    @Html.TextBoxFor(x => x.IconName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.IconName)</span>
                </div>
                <div class="form-group">
                    <label>Buton Adı</label>
                    @Html.TextBoxFor(x => x.ButtonName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ButtonName)</span>
                </div>
                <div class="form-group">
                    <label>Buton Link</label>
                    @Html.TextBoxFor(x => x.ButtonLink, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ButtonLink)</span>
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Kaydet </button>
            </form>
        </div>
    </div>
</div>

