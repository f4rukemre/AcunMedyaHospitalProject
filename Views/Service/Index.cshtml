@model List<AcunMedyaHospitalProject.Entities.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">Servis Tablosu</h4>
            <p class="card-description text-muted">
                Servis bilgileri bu alanda gözükecektir.
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 20%;">Ad</th>
                            <th style="width: 20%;">Açıklama</th>
                            <th style="width: 15%;">İkon Adı</th>
                            <th style="width: 10%;">Buton Adı</th>
                            <th style="width: 10%;">Buton Link</th>
                            <th style="width: 5%;">Güncelle</th>
                            <th style="width: 5%;">Kaldır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.IconName</td>
                                <td>@item.ButtonName</td>
                                <td>@item.ButtonLink</td>
                                <td><a class="btn btn-success btn-sm" href="/Service/UpdateService/@item.ID">Güncelle</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Service/DeleteService/@item.ID">Kaldır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/Service/CreateService">Service Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
