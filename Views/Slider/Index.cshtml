@model List<AcunMedyaHospitalProject.Entities.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">Slider Tablosu</h4>
            <p class="card-description text-muted">
                Slider bilgileri bu alanda gözükecektir.
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Resim Url</th>
                            <th>Güncelle</th>
                            <th>Kaldır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImageUrl" /></td>
                                <td><a class="btn btn-success btn-sm" href="/Slider/UpdateSlider/@item.Id">Güncelle</a></td>
                                <td><a class="btn btn-danger btn-sm" href="/Slider/DeleteSlider/@item.Id">Kaldır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/Slider/CreateSlider">Slider Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

