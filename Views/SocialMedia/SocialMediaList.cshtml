@model List<AcunMedyaHospitalProject.Entities.SocialMedia>

@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">Sosyal Medya Yönetimi</h4>
            <p class="card-description text-muted">
                Sosyal medya bilgileri bu alanda gözükecektir.
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th>ID</th>
                            <th>Platform</th>
                            <th>Link</th>
                            <th>Güncelle</th>
                            <th>Kaldır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var socialMedia in Model)
                        {
                            <tr>
                                <td>@socialMedia.ID</td>
                                <td>@socialMedia.Platform</td>
                                <td><a href="@socialMedia.Link" target="_blank" class="btn btn-info">Git</a></td>
                                <td><a href="/SocialMedia/UpdateSocialMedia/@socialMedia.ID" class="btn btn-success btn-sm">Güncelle</a></td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@socialMedia.ID" class="btn btn-danger btn-sm">Kaldır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/SocialMedia/CreateSocialMedia">Sosyal Medya Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-title {
        font-weight: bold;
    }

    .table {
        border-radius: 5px;
        overflow: hidden;
    }

    .btn {
        border-radius: 20px;
    }

    .thead-dark {
        background-color: #007bff !important; /* Siyah yerine mavi renk */
        color: white !important; /* Yazı rengini beyaz yap */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Hover için gri ton */
    }
</style>
